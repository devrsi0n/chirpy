{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "test": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "@chirpy/main-app#build": {
      "dependsOn": [
        "^build",
        "$NEXT_PUBLIC_APP_URL",
        "$NEXT_PUBLIC_HASURA_HTTP_ORIGIN",
        "$NEXTAUTH_SECRET",
        "$EMAIL_API_KEY",
        "$HASURA_ADMIN_SECRET",
        "$HASURA_EVENT_SECRET",
        "$NEXT_PUBLIC_VAPID"
      ]
    },
    "build:local": {
      "cache": false
    },
    "g:gql": {
      "inputs": ["src/**/*.graphql"],
      "cache": false
    }
  },
  "globalDependencies": ["$GITHUB_TOKEN", "tsconfig.json", ".env.*"]
}
