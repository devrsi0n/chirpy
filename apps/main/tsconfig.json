{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@chirpy/tsconfigs/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$/*": ["src/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", ".next"],
  "include": ["types/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx"]
}
