{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@chirpy-dev/tsconfigs/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["jest", "node"],
    "paths": {
      "$/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", ".next"],
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../packages/types/src/error.ts"
  ]
}
