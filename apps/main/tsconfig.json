{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@chirpy/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    ".next"
  ],
  "include": [
    "./**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
