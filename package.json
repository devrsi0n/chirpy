{
  "name": "chirpy",
  "private": true,
  "scripts": {
    "lint": "eslint ./"
  },
  "engines": {
    "node": "16.x"
  },
  "devDependencies": {
    "@chirpy/prettier-config": "workspace:*",
    "eslint": "8.15.0",
    "eslint-config-chirpy": "workspace:*",
    "simple-git-hooks": "2.7.0",
    "prettier": "2.6.2",
    "next": "12.1.5",
    "lint-staged": "12.4.1",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "turbo": "1.2.9"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": "@chirpy/prettier-config",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core",
        "webpack",
        "@testing-library/dom",
        "@urql/core",
        "@storybook/addons",
        "@storybook/client-api",
        "@storybook/preview-web",
        "@geist-ui/react",
        "typescript",
        "graphql"
      ],
      "allowedVersions": {
        "react": "18",
        "react-dom": "18",
        "graphql": "16",
        "glob": "8",
        "core-js": "3"
      }
    }
  },
  "renovate": {
    "extends": [
      "config:base",
      "docker:disable"
    ],
    "prConcurrentLimit": 15,
    "packageRules": [
      {
        "matchPackagePatterns": "^@tiptap/",
        "groupName": [
          "Tiptap packages"
        ]
      },
      {
        "matchPackagePatterns": "^dotenv",
        "groupName": [
          "Dotenv packages"
        ]
      },
      {
        "matchPackagePatterns": [
          "^react",
          "^next"
        ],
        "prPriority": 5
      },
      {
        "matchDepTypes": [
          "dependencies"
        ],
        "prPriority": 2
      },
      {
        "matchDepTypes": [
          "devDependencies"
        ],
        "prPriority": 1
      },
      {
        "matchPackagePatterns": [
          "github-releases",
          "github-tags",
          "^@types/"
        ],
        "prPriority": -1
      }
    ],
    "labels": [
      "ðŸ“¦ package"
    ]
  },
  "license": "Apache License 2.0"
}
