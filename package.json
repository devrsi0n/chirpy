    "@react-aria/button": "3.4.3",
    "@sendinblue/client": "3.1.0",
    "@tailwindcss/typography": "0.4.1",
    "@testing-library/cypress": "8.0.2",
    "@tiptap/extension-link": "2.0.0-beta.37",
