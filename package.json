    "@tiptap/react": "2.0.0-beta.109",
    "@tiptap/starter-kit": "2.0.0-beta.184",
    "clsx": "1.1.1",
    "cors": "2.8.5",
    "css-loader": "6.7.1",
    "csstype": "3.0.11",
    "debounce-promise": "3.1.2",
    "eta": "1.12.3",
    "framer-motion": "6.3.3",
    "github-slugger": "1.4.0",
    "graphql": "16.4.0",
    "graphql-ws": "5.8.1",
    "gray-matter": "4.0.3",
    "html-loader": "3.1.0",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.21",
    "mdx-prism": "0.3.4",
    "next": "12.1.5",
    "next-auth": "4.3.4",
    "next-compose-plugins": "2.2.1",
    "next-connect": "0.12.2",
    "next-mdx-remote": "3.0.8",
    "next-plausible": "3.1.9",
    "next-themes": "0.1.1",
    "next-urql": "3.3.2",
    "nodemailer": "6.7.4",
    "patch-package": "6.4.7",
    "postcss-loader": "6.2.1",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-error-boundary": "3.1.4",
    "react-flatpickr": "3.10.11",
    "react-flip-move": "3.0.4",
    "reading-time": "1.5.0",
    "rehype": "12.0.1",
    "resolve-url-loader": "^5.0.0",
    "style-loader": "3.3.1",
    "super-tiny-icons": "0.4.0",
    "superjson": "1.9.0",
