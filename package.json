{
  "name": "chirpy",
  "private": true,
  "scripts": {
    "postinstall": "patch-package",
    "lint": "eslint ./"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{json,md,scss,css}": [
      "prettier --write"
    ],
    "**/generated/**/*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.graphql": [
      "prettier --write",
      "npx turbo run build --filter=@chirpy/client-graphql",
      "npx turbo run build --filter=@chirpy/server-graphql"
    ],
    "*.{ts,tsx,js}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@geist-ui/react-icons": "1.0.1",
    "@headlessui/react": "1.6.0",
    "@next/bundle-analyzer": "12.1.5",
