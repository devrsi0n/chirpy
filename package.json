    "typescript": "4.6.4",
    "vite": "2.9.6"
  },
  "engines": {
    "node": "14.x"
  },
  "renovate": {
    "extends": [
      "config:base",
      "docker:disable"
    ],
    "packageRules": [
      {
        "matchPackagePatterns": "^@tiptap/",
        "groupName": [
          "Tiptap packages"
        ]
      },
      {
        "matchPackagePatterns": "^dotenv",
        "groupName": [
          "Dotenv packages"
        ]
      },
      {
        "matchDepTypes": [
          "devDependencies"
        ],
        "prPriority": -1
      },
      {
        "matchPackagePatterns": [
          "^react",
          "^next"
        ],
        "prPriority": 5
      }
    ],
    "labels": [
      "ðŸ“¦ package"
    ]
  },
  "nextBundleAnalysis": {
    "budget": 256000,
    "budgetPercentIncreaseRed": 10,
    "showDetails": true
  }
}
