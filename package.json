{
  "name": "chirpy",
  "private": true,
  "scripts": {
    "lint": "eslint ./"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{json,md,scss,css}": [
      "prettier --write"
    ],
    "**/generated/**/*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.graphql": [
      "prettier --write",
      "npx turbo run build --filter=@chirpy/client-graphql",
      "npx turbo run build --filter=@chirpy/server-graphql"
    ],
    "*.{ts,tsx,js}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "eslint": "8.14.0",
    "lint-staged": "12.4.1",
    "prettier": "2.6.2",
    "simple-git-hooks": "2.7.0",
    "typescript": "4.6.4",
    "turbo": "1.2.6"
  },
  "engines": {
    "node": "14.x"
  },
  "renovate": {
    "extends": [
      "config:base",
      "docker:disable"
    ],
    "packageRules": [
      {
        "matchPackagePatterns": "^@tiptap/",
        "groupName": [
          "Tiptap packages"
        ]
      },
      {
        "matchPackagePatterns": "^dotenv",
        "groupName": [
          "Dotenv packages"
        ]
      },
      {
        "matchDepTypes": [
          "devDependencies"
        ],
        "prPriority": -1
      },
      {
        "matchPackagePatterns": [
          "^react",
          "^next"
        ],
        "prPriority": 5
      }
    ],
    "labels": [
      "ðŸ“¦ package"
    ]
  },
  "nextBundleAnalysis": {
    "budget": 256000,
    "budgetPercentIncreaseRed": 10,
    "showDetails": true
  }
}
