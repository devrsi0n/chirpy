{
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:parcel": "parcel watch ./src/external/comment.ts --out-dir public",
    "dev:both": "concurrently \"next\" \"parcel watch ./src/external/comment.ts --out-dir public\"",
    "debug": "NODE_OPTIONS='--inspect' next dev",
    "build": "node ./scripts/build.js",
    "build:local": "dotenv -e .env.development -- npm run build",
    "analyze": "ANALYZE=true npm run build",
    "start": "next start",
    "start:local": "dotenv -e .env.development -- next start",
    "g:gql": "graphql-codegen --config ./docs/server-codegen.yml && graphql-codegen --config ./docs/client-codegen.yml",
    "g:gql:watch": "concurrently \"graphql-codegen --watch --config ./docs/server-codegen.yml\" \"graphql-codegen --config ./docs/client-codegen.yml --watch\""
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{json,md,scss,css}": [
      "prettier --write",
      "npm run g:gql"
    ],
    "*.{ts,tsx,js}": [
      "eslint --fix"
    ]
  },
