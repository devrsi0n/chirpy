{
  "name": "chirpy",
  "private": true,
  "scripts": {
    "lint": "eslint ./"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{json,md,scss,js}": [
      "prettier --write"
    ],
    "**/generated/**/*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.graphql": [
      "prettier --write",
      "cd apps/main && pnpm run g:gql"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.24.0",
    "@typescript-eslint/parser": "5.24.0",
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "eslint": "8.14.0",
    "eslint-config-next": "12.1.5",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "26.1.5",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-storybook": "0.5.11",
    "eslint-plugin-unicorn": "42.0.0",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "simple-git-hooks": "2.7.0",
    "next": "12.1.5",
    "lint-staged": "12.4.1",
    "prettier": "2.6.2",
    "turbo": "1.2.9",
    "typescript": "4.6.4"
  },
  "engines": {
    "node": "16.x"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core",
        "webpack",
        "@testing-library/dom",
        "@urql/core",
        "@storybook/addons",
        "@storybook/client-api",
        "@storybook/preview-web",
        "@geist-ui/react",
        "typescript",
        "graphql"
      ],
      "allowedVersions": {
        "react": "18",
        "react-dom": "18",
        "graphql": "16",
        "glob": "8",
        "core-js": "3"
      }
    }
  },
  "renovate": {
    "extends": [
      "config:base",
      "docker:disable"
    ],
    "prConcurrentLimit": 15,
    "packageRules": [
      {
        "matchPackagePatterns": "^@tiptap/",
        "groupName": [
          "Tiptap packages"
        ]
      },
      {
        "matchPackagePatterns": "^dotenv",
        "groupName": [
          "Dotenv packages"
        ]
      },
      {
        "matchDepTypes": [
          "devDependencies"
        ],
        "prPriority": 1
      },
      {
        "matchPackagePatterns": [
          "^react",
          "^next"
        ],
        "prPriority": 5
      },
      {
        "matchPackagePatterns": [
          "github-releases",
          "github-tags"
        ],
        "prPriority": -1
      }
    ],
    "labels": [
      "ðŸ“¦ package"
    ]
  },
  "license": "Apache License 2.0"
}
